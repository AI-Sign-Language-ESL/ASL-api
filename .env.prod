# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=PROD
PYTHONPATH=.
DJANGO_SETTINGS_MODULE=config.settings.prod

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================
# CRITICAL: Generate a strong secret key!
# You can generate one using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_AT_LEAST_50_CHARACTERS

# Your actual domain(s) - IMPORTANT for security!
# Replace with your Hostinger VPS domain or IP
# Example: ALLOWED_HOSTS=api.yourdomain.com,yourdomain.com,123.456.789.0
ALLOWED_HOSTS=your-server-ip-or-domain.com

# =============================================================================
# DATABASE (PostgreSQL) - REQUIRED IN PRODUCTION
# =============================================================================
# Database name for your application
POSTGRES_DB=tafahom_prod

# Database user (don't use 'postgres' in production, create a dedicated user)
POSTGRES_USER=tafahom_user

# CRITICAL: Use a strong password! (at least 20 characters, random)
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_VERY_STRONG_PASSWORD_123456789

# If using Docker Compose: use service name 'db'
# If PostgreSQL is on same VPS: use 'localhost' or '127.0.0.1'
# If using managed database: use the provided host
POSTGRES_HOST=localhost

POSTGRES_PORT=5432

# =============================================================================
# REDIS (for Django Channels) - REQUIRED IN PRODUCTION
# =============================================================================
# If using Docker Compose: use service name 'redis'
# If Redis is on same VPS: use 'localhost' or '127.0.0.1'
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# AI SERVICE CONFIGURATION - REQUIRED
# =============================================================================
# Your production AI service URL
# If deployed on same VPS: http://localhost:8001
# If external service: https://your-ai-service.com
AI_BASE_URL=https://your-ai-service-url.com

# Your actual AI API key - KEEP THIS SECRET!
AI_API_KEY=your-actual-production-ai-api-key-here

AI_TIMEOUT=30

# =============================================================================
# WEBSOCKET LIMITS
# =============================================================================
WS_MAX_MESSAGES_PER_SECOND=30
WS_MAX_CONNECTION_TIME=900

# =============================================================================
# CORS & CSRF (Frontend URLs) - REQUIRED
# =============================================================================
# Your production frontend URL(s) with https://
# Example: https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com

# Same as CORS_ALLOWED_ORIGINS
CSRF_TRUSTED_ORIGINS=https://your-frontend-domain.com

# =============================================================================
# SENTRY (Error Tracking) - OPTIONAL BUT RECOMMENDED
# =============================================================================
# Sign up at https://sentry.io and get your DSN
# This helps you track errors in production
SENTRY_DSN=